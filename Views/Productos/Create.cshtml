@model TiendaWeb.Models.Producto
@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="card p-4 shadow-lg">
    <h2 class="text-center fw-bold mb-3">🆕 Agregar Nuevo Producto</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" placeholder="Ej. Audífonos Bluetooth" />
        </div>
        <div class="mb-3">
            <label class="form-label">Precio</label>
            <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="Ej. 25.99" />
        </div>
        <div class="mb-3">
            <label class="form-label">Stock</label>
            <input asp-for="Stock" type="number" class="form-control" placeholder="Ej. 10" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-custom me-2">💾 Guardar</button>
            <a asp-action="Index" class="btn btn-outline-light">⬅️ Volver</a>
        </div>
    </form>
</div>
