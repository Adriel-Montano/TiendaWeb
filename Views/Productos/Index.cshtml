@model List<TiendaWeb.Models.Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="text-center mb-4">
    <h1 class="fw-bold">🛍️ Inventario de Productos</h1>
    <p class="text-light">Visualiza tus productos y agrega nuevos fácilmente</p>
    <a class="btn btn-custom" asp-action="Create">➕ Agregar Producto</a>
</div>

<div class="card p-4 shadow-lg">
    <table class="table table-hover align-middle text-white">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio ($)</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nombre</td>
                    <td>@p.Precio</td>
                    <td>@p.Stock</td>
                    <td>
                        <a class="btn btn-sm btn-outline-light" asp-action="Details" asp-route-id="@p.Id">
                            🔍 Detalles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
